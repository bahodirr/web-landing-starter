    <div class="max-w-4xl mx-auto relative z-10">
      <h1 class="font-serif text-7xl md:text-9xl leading-none mb-8 tracking-tighter">
        Grow<span class="text-accent">.</span><br />
        Online
      </h1>
      
      <p class="text-lg md:text-xl text-muted max-w-xl mx-auto mb-12 leading-relaxed font-light">
        A professional website template designed to convert visitors into customers. 
        Simple, fast, and effective.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
        <a href="/contact" class="btn btn-primary">
          Get Started
        </a>
        <a href="/about" class="btn btn-secondary">
          Learn More
        </a>
      </div>
    </div>
  </section>

  <!-- Minimal Features -->
  <section class="py-32 px-8 border-b border-black/10">
    <div class="max-w-7xl mx-auto">
      <div class="grid md:grid-cols-3 gap-16 md:gap-12">
        <div class="space-y-6">
          <span class="text-accent font-serif text-3xl italic">01</span>
          <h3 class="text-xl font-medium">Instant Loading</h3>
